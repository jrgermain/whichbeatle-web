{
  "name": "whichbeatle-web",
  "version": "1.0.0",
  "description": "Find info about Beatles songs, listen to your favorites, and discover new ones!",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint ./src; stylelint ./src/styles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jrgermain/whichbeatle-web.git"
  },
  "author": "jrgermain",
  "bugs": {
    "url": "https://github.com/jrgermain/whichbeatle-web/issues"
  },
  "homepage": "https://github.com/jrgermain/whichbeatle-web#readme",
  "devDependencies": {
    "@types/node": "^17.0.41",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.6.2",
    "stylelint": "^14.8.5",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "typescript": "^4.7.2",
    "vite": "^2.9.13"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2019": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module",
      "project": [
        "./tsconfig.json"
      ]
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ]
  }
}
